
{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "ESNext", 
    "moduleResolution": "Node", 
    "lib": ["ESNext", "DOM"], 
    "declaration": true, 
    "declarationMap": true, 
    "sourceMap": true, 
    "inlineSources": true, 
    "outDir": "./dist", 
    "rootDir": "./src", 
    "strict": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true, 
    "resolveJsonModule": true, 
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
